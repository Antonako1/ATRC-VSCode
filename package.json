{
    "name": "atrc",
    "displayName": "ATRC",
    "description": "Language support and syntax highlighting for ATRC resource files",
    "version": "0.0.1",
    "main": "./dist/extension.js",
    "publisher": "Antonako1",
    "author": {
        "name": "Antonako1",
        "website": "https://github.com/Antonako1/ATRC"
    },
    "activationEvents": [
        "onCommand:extension.showATRCCommands",
        "onStartupFinished"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/Antonako1/ATRC-VSCode.git"
    },
    "license": "BSD-2-Clause",
    "scripts": {
        "vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint"
    },
    "engines": {
        "vscode": "^1.102.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "capabilities": {
        "completionProvider": {
            "resolveProvider": true
        }
    },
    "contributes": {
        "semanticTokenTypes": [
            {
                "id": "comment",
                "description": "Comment"
            },
            {
                "id": "keyword",
                "description": "Keyword"
            },
            {
                "id": "variable",
                "description": "Variable"
            },
            {
                "id": "string",
                "description": "String"
            },
            {
                "id": "number",
                "description": "Number"
            },
            {
                "id": "constant",
                "description": "Constant"
            }
        ],
        "semanticTokenModifiers": [
            {
                "id": "readonly",
                "description": "Readonly"
            },
            {
                "id": "static",
                "description": "Static"
            }
        ],
        "semanticTokenScopes": [
            {
                "id": "comment",
                "description": "Comment"
            },
            {
                "id": "keyword",
                "description": "Keyword"
            },
            {
                "id": "variable",
                "description": "Variable"
            },
            {
                "id": "string",
                "description": "String"
            },
            {
                "id": "number",
                "description": "Number"
            },
            {
                "id": "constant",
                "description": "Constant"
            }
        ],
        "languages": [
            {
                "filenamePatterns": [
                    "*.atrc"
                ],
                "id": "atrc",
                "aliases": [
                    "ATRC"
                ],
                "extensions": [
                    ".atrc"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "atrc",
                "scopeName": "source.atrc",
                "path": "./syntaxes/atrc.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "atrc",
                "path": "./snippets/atrc.json"
            }
        ],
        "activationEvents": [
            "onLanguage:atrc"
        ]
    },
    "dependencies": {
        "vscode-languageclient": "^9.0.1",
        "vscode-languageserver": "^9.0.1",
        "vscode-languageserver-textdocument": "^1.0.12"
    },
    "devDependencies": {
        "vscode": "^1.1.37",
        "@types/node": "^24.1.0"
    }
}
